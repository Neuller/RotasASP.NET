@model IEnumerable<Rotas.Models.Noticia>

@{
    ViewBag.Title = "Página Principal";
}

<h2>Rotas em ASP.NET</h2>
<br />
<h2>Categorias</h2>
<br />
<div>
    @foreach(string item in ViewBag.Categorias)
    {
        <li>
            @Html.ActionLink(item, "MostrarCategoria", "Home", new { @categoria = item }, null)
        </li>
    }
</div>
<br />
<h2>Principais Notícias</h2>
<br />
<div>
    <ul>
        @foreach (var item in Model)
        {
            <li>
                @Html.ActionLink(item.Titulo, "MostrarNoticia", "Home", new
           {
               @noticiaId = item.NoticiaId,
               @categoria = item.Categoria.ToLower(),
               @titulo = item.Titulo.ToLower()
           }, null);

                <em>@Html.DisplayFor(modelItem => item.Categoria)</em>
                <b>@Html.DisplayFor(modelItem => item.Data)</b>
            </li>
        }
    </ul>
</div>
<br />
<div>
    @Html.ActionLink("Todas as Notícias", "TodasAsNoticias", "Home")
</div>
